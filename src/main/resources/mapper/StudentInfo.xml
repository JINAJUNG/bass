<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- <where>태그가 있으면 linum이나 변수 하나만 넘길 수 없고 쓰지않고 where로 하나만비교하는 delete나 update같은 경우는 가능ㅎ다. -->
  <!-- <where>는 mybatis tag http://aljjabaegi.tistory.com/310태그정리-->
<mapper namespace="SQL.Student" >
<select id="selectStudentList" parameterType="li">
select * from student
<where>
	<if test="student_num!=null">
		and student_num=#{student_num}
	</if>
</where>
</select>


</mapper>